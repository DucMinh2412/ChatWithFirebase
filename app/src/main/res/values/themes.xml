<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatWithFirebase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- dialog -->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- font -->
    <style name="SenBold">
        <item name="android:fontFamily">@font/sen_bold</item>
    </style>

    <style name="LouisGeorgeCafe">
        <item name="android:fontFamily">@font/louis_george_cafe</item>
    </style>

    <style name="LouisGeorgeCafeBold">
        <item name="android:fontFamily">@font/louis_george_cafe_bold</item>
    </style>

    <style name="LouisGeorgeCafeLight">
        <item name="android:fontFamily">@font/louis_george_cafe_light</item>
    </style>

    <style name="ProductSansBold">
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="ProductSansRegular">
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="SenRegular">
        <item name="android:fontFamily">@font/sen_regular</item>
    </style>


    <!-- text color -->
    <style name="SenBold.TextColorBlue85">
        <item name="android:textColor">@color/blue_85</item>
    </style>

    <style name="SenRegular.TextColorBlack">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SenBold.TextColorBlack">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SenBold.TextColorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LouisGeorgeCafe.TextColorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LouisGeorgeCafe.TextColorBlack">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LouisGeorgeCafeBold.TextColorBlue">
        <item name="android:textColor">@color/blue_61</item>
    </style>

    <style name="LouisGeorgeCafeBold.TextColorWhite">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- component -->
    <style name="SenBold.TextColorWhite.Components">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_login</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="SenBold.TextColorBlue85.Components">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_register</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="SenRegular.TextColorBlack.EditTextComponents">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
    </style>


</resources>