<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatWithFirebase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- dialog -->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Sen_Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sen_bold</item>
        <item name="android:textSize">@dimen/_26sdp</item>
    </style>

    <style name="Louis_George_Cafe" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/louis_george_cafe</item>
    </style>

    <style name="Louis_George_Cafe_Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/louis_george_cafe_bold</item>
    </style>

    <style name="Louis_George_Cafe_Light" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/louis_george_cafe_light</item>
    </style>

    <style name="Product_Sans_Bold" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/product_sans_bold</item>
    </style>

    <style name="Product_Sans_Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="Sen_Regular" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sen_regular</item>
    </style>
</resources>